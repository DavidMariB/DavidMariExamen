<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardCycle"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        card_view:cardBackgroundColor="#0578f2">

        <ImageView
            android:id="@+id/imgCycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp">

            <TextView
                android:id="@+id/tvCycleCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Curso"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginLeft="50dp"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/tvCycleTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ciclo"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textStyle="italic"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvCycleYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AÃ±o de Promocion"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="100dp"
            android:textSize="15sp"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/tvCycleStudents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numero Alumnos"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="100dp"/>

    </android.support.v7.widget.CardView>

</android.widget.LinearLayout>